{
  "name": "Chinese Reader",
  "description": "A tool to help Chinese learner read Chinese",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "https://www.readability.com/",
    "http://localhost:8000/"
  ],
  "background": {
    "scripts": ["jquery-3.0.0.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "css": ["content.css"],
    "js": ["mini-pinyin.js",  "jquery-3.0.0.js", "content.js"]
  }],
  "browser_action": {
    "default_title": "Reader Mode"
  },
  "manifest_version": 2
}