{
  "name": "Chinese Reader",
  "description": "A tool to help Chinese learner read Chinese",
  "version": "0.1.1",
  "permissions": [
    "activeTab",
    "https://www.readability.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "html": [
      "content.html"
    ],
    "css": [
      "content.css"
    ],
    "js": [
      "mini-pinyin.js",
      "lodash.min.js",
      "jquery-3.0.0.js",
      "config.js",
      "content.js"
    ]
  }],
  "browser_action": {
    "default_title": "Left click to turn on Chinese reader mode",
    "default_icon": "icon_big.png"
  },
  "manifest_version": 2
}